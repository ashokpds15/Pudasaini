    "automate:headed": "playwright test tests/meroshare/login.spec.js --headed",
    "automate:multi": "playwright test tests/meroshare/multi-user.spec.js",
    "automate:multi:headed": "playwright test tests/meroshare/multi-user.spec.js --headed"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing"
  ],
